<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/task_list_item_imageAlarmOn"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:padding="4dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:minHeight="12dp"
        android:minWidth="12dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/task_list_item_titleTextView"
        android:layout_toLeftOf="@id/task_list_item_imageAlarmOn"
        android:text="Task title"
        android:textSize="18sp"
        android:padding="4dp"
        android:paddingLeft="5dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/task_list_item_dateTextView"
        android:layout_below="@id/task_list_item_titleTextView"
        android:layout_toLeftOf="@id/task_list_item_imageAlarmOn"
        android:text="Crime date"
        android:textSize="15sp"
        android:paddingBottom="4dp"
        android:paddingLeft="5dp" />
</RelativeLayout>
